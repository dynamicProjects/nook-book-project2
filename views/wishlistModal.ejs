<!-- Wishlist Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Wishlist</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <% if (user === '') { %>
                    <p>Please sign in to view your wishlist.</p>
                <% } else { %>
                    <div class="row">
                        <% for (let i = 0; i < wishlist.wishlistBooks.length; i++) { %>
                            <img class="col-4" src="<%= wishlist.wishlistBooks[i].image %>" onclick="location.href='/api/books/<%= wishlist.wishlistBooks[i].title%>/<%= wishlist.wishlistBooks[i].author%>'" alt="book">
                        <% } %>
                    </div>
                <% } %>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
      </div>
    </div>
</div>